

package database;

import javax.persistence.Entity;
import javax.persistence.GeneratedValue;
import javax.persistence.GenerationType;
import javax.persistence.Id;
import javax.persistence.Table;
import javax.validation.constraints.NotNull;
import javax.validation.constraints.Pattern;

@Entity
@Table(name = "calculator_results")
public class CalculatorResults {

    @Id
    @GeneratedValue(strategy = GenerationType.IDENTITY)
    private Long id;
    @NotNull
    private Double firstNumber;
    @NotNull
    private Double secondNumber;
    @NotNull
    @Pattern(regexp = "[+-/*]", message = "Invalid math operator")
    private String mathOperator;
    @NotNull
    private Double result;

    public CalculatorResults() {}

    public CalculatorResults(Double firstNumber, Double secondNumber, String mathOperator, Double result) {
        this.firstNumber = firstNumber;
        this.secondNumber = secondNumber;
        this.mathOperator = mathOperator;
        this.result = result;
    }

    public Long getId() {
        return id;
    }

    public void setId(Long id) {
        this.id = id;
    }

    public Double getFirstNumber() {
        return firstNumber;
    }

    public void setFirstNumber(Double firstNumber) {
        this.firstNumber = firstNumber;
    }

    public Double getSecondNumber() {
        return secondNumber;
    }

    public void setSecondNumber(Double secondNumber) {
        this.secondNumber = secondNumber;
    }

    public String getMathOperator() {
        return mathOperator;
    }

    public void setMathOperator(String mathOperator) {
        this.mathOperator = mathOperator;
    }

    public Double getResult() {
        return result;
    }

    public void setResult(Double result) {
        this.result = result;
    }
}